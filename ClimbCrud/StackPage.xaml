    <StackLayout 
         VerticalOptions="Center"
         Spacing="20"
         Padding="40">
        
        <StackLayout HorizontalOptions="Center">
            <Label TextColor="Ivory" Text="Welcome to ClimbCrud" FontSize="28" FontAttributes="Bold"/>
            <Label TextColor="Ivory" Text="Smarter and Harder  Progression" FontSize="18"/>
        </StackLayout>


        <Button BackgroundColor="#1dabf0" Text="Login"/>
        <Button BackgroundColor="#1dabf0" Text="Register"/>
    
    </StackLayout>

</ContentPage>
